@model List<ApplicationUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "User Management";
}

<h2>User Management</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            @* <th>Created At</th> *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var roles = await UserManager.GetRolesAsync(user);
            bool isAdmin = roles.Contains("Admin");

            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                @* <td>@user.CreatedAt.ToShortDateString()</td> *@
                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            Actions
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-danger" asp-action="BlockUser" asp-route-id="@user.Id">Block</a></li>
                            <li><a class="dropdown-item text-danger" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a></li>

                            @if (!isAdmin)
                            {
                                <li><a class="dropdown-item text-success" asp-action="PromoteToAdmin" asp-route-id="@user.Id">Make Admin</a></li>
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
