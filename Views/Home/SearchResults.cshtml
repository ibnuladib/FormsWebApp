@using Markdig
@model List<Template>

<h2>Search Results</h2>

@if (!Model.Any())
{
    <p>No templates found.</p>
}
else
{
    <div class="row">
        @foreach (var template in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="/Template/Response/@template.Id" class="text-decoration-none">
                                @template.Title
                            </a>
                        </h4>
                        <h6 class="text-muted">Author: @template.Author.Email</h6> 
                        <hr>
                        <div class="card-text">
                            @Html.Raw(Markdown.ToHtml(template.Description ?? ""))
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
